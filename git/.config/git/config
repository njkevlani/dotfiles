[user]
	email = njkevlani@gmail.com
	name = Nilesh
	signingkey = ssh-rsa  njkevlani@gmail.com
[color]
	ui = true
[core]
	autocrlf = input
	editor = nvim
	quotepath = false
	commitGraph = true
[filter "gitignore"]
	clean = "sed '/#gitignore$/'d"
	smudge = cat
[diff]
  tool = meld
[difftool]
    prompt = false
[difftool "meld"]
  cmd = meld "$LOCAL" "$REMOTE"
[merge]
    tool = meld
[mergetool "meld"]
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"

[gc]
	writeCommitGraph = true
[commit]
	gpgsign = true

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[gpg]
	format = ssh
[init]
	defaultBranch = main
