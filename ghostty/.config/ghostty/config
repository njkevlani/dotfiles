# Disable font ligatures.
font-feature = -calt

# Copy to system clipboard always. Using `true` as value will only copy to
# selection clipboard where selection clipboard is supported (like linux).
copy-on-select = clipboard

theme = Seoulbones Light

# Disable CSD'ed titlebar on linux. CSD'ed titlebar looks too inconsitent with
# other apps on Xfce.
gtk-titlebar = false

keybind = super+n=new_tab

# Shell integration sets cursor to a bar on a prompt by default. This disables
# that and keeps the cursor as block.
shell-integration-features = no-cursor
